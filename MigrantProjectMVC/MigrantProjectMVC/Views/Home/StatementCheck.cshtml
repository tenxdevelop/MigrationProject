@{
    ViewData["Title"] = "Обработка заявления";
    ViewData["ShowHeader"] = true;
}

<div class="container mt-5">
    <h1>Обработка заявлений</h1>

    <div class="container">
        <h2>Заявление на постановку миграционного учета</h2>

        <div class="card">
            <div class="card-header">
                Данные мигранта
            </div>
            <div class="card-body">
                <h5 class="card-title">ФИО: Иванов Иван Иванович</h5>
                <p class="card-text">Дата рождения: 01.01.1990</p>
                <p class="card-text">Гражданство: Российская Федерация</p>
                <p class="card-text">Паспорт: 1234 567890</p>
                <p class="card-text">Адрес временного проживания: г. Москва, ул. Пушкина, д. 10, кв. 5</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Данные владельца жилплощади
            </div>
            <div class="card-body">
                <h5 class="card-title">ФИО: Петров Петр Петрович</h5>
                <p class="card-text">Дата рождения: 02.02.1985</p>
                <p class="card-text">Гражданство: Российская Федерация</p>
                <p class="card-text">Паспорт: 9876 543210</p>
                <p class="card-text">Адрес: г. Москва, ул. Пушкина, д. 10, кв. 5</p>
            </div>
        </div>
    </div>

    <form asp-action="Add" method="post">  
        @Html.AntiForgeryToken() 

        <div class="form-group">
            <label for="ApplicationId" class="control-label">Номер заявления:</label>
            <input type="text" name="ApplicationId" id="ApplicationId" class="form-control" placeholder="Введите номер заявления" required />
            <span class="text-danger" id="ApplicationIdError"></span>
        </div>

        <div class="form-group">
            <label for="Result" class="control-label">Результат заявления:</label>
            <select name="Result" id="Result" class="form-control" required>
                <option value="">Выберите результат</option>
                <option value="Approved">Одобрено</option>
                <option value="Rejected">Отклонено</option>
            </select>
            <span class="text-danger" id="ResultError"></span>
        </div>

        <div class="form-group">
            <label for="Comments" class="control-label">Комментарии:</label>
            <textarea name="Comments" id="Comments" class="form-control" rows="4" placeholder="Введите комментарии (опционально)"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Обработать заявление</button>
    </form>

    
</div>
